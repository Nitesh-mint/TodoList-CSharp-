@model TodoList.Models.TodoItem;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TodoList</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
<h1> Add new task</h1>
    <form asp-action="Create" method="post">
        <div class="container-sm">
            <label for="Task" style="max-width:fit-content; font-size: 30px; padding-bottom: 10px">Task</label><br/>
            <input placeholder="Enter your task here" type="text" id="Task" name="Task" required class="form-control" style="max-width:fit-content"/>
            @*<label for="IsComplete" class="fs-5" style="max-width:fit-content;padding-top: 5px; padding-left: 4px">Complete?</label><br/>*@
            @*<input type="checkbox" id="IsComplete" name="IsComplete" style="width: 1.2em; height: 1.2em; margin-left: 5px; margin-top: 5px"/><br/>*@
            <br>
            <div class="row p-2">
                <div class="col-3 p-2">
                    <label style="max-width:fit-content; font-size: 30px; padding-bottom: 10px">Due Date: </label><input type="datetime-local" class="form-control" style="max-width: 150px" asp-for="DueDate" id="DueDate"/>
                </div>
            </div>
            
            <button type="submit" class="btn btn-sm btn-success">Save</button>
        </div>
    </form>
</body>
</html>