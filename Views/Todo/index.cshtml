@model IEnumerable<TodoList.Models.TodoItem>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TodoList</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <h1> Todo List</h1>
    <a class="link" asp-action="Create">Add new Todo</a>

    <div class="container">
        <div class="row">
            <div class="col-8">
                <ul>
                    @foreach (var item in Model)
                    {
                        @if(item.IsComplete is false){
                            <li style="list-style: none;" class="p-2">
                                <div class="row">
                                    <div class="col-5">
                                        <p class="fs-5">@item.Task</p>
                                    </div>
                                    <div class="col-4 d-flex flex-row-reverse">
                                        <form asp-action="Delete" method="post" style="display: inline;">
                                            <input class="form-control" type="hidden" name="id" value="@item.ID" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                            <a class="btn btn-primary text-white "
                                                href="@Url.Action("Update", "Todo", new { id = item.ID })">Update</a>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        }
                        <br>
                    }
                </ul>
            </div>
            <div class="col-4">
                <ul>
                    @foreach(var item in Model){
                        @if(item.IsComplete is true){
                            <li style="text-decoration: line-through;">@item.Task</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</html>
